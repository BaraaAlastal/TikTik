<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_8sdp"
    android:layout_marginBottom="@dimen/_8sdp"
    android:layout_marginStart="@dimen/_15sdp"
    android:layout_marginEnd="@dimen/_20sdp"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_item_mycart"
        android:elevation="@dimen/_10sdp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp">
            <ImageView
                android:id="@+id/product_img_myCart_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/fruit_icon"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_5sdp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/_20sdp">
                <TextView
                    android:id="@+id/product_name_myCart_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pomegranate"
                    android:layout_weight="1"
                    android:textColor="#000"
                    android:textSize="@dimen/_20sdp"
                    android:gravity="start"/>
                <TextView
                    android:id="@+id/total_tv_myCart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/orange_color"
                    android:textSize="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_gravity="start"
                    android:text="Total:100$"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle_item_pluse_minus"
                    android:gravity="center"
                    android:layout_gravity="start"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_weight="1"
                    >
                    <ImageView
                        android:id="@+id/minus_img_myCart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_minus"
                        android:layout_gravity="center"
                        />
                    <TextView
                        android:id="@+id/quantity_tv_myCart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/orange_color"
                        android:layout_marginStart="@dimen/_8sdp"
                        />
                    <ImageView
                        android:id="@+id/plus_img_myCart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_pluse"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_5sdp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>